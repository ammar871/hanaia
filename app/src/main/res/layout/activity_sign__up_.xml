<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgraund"
        tools:context=".sign.Sign_Up_Activity">

        <LinearLayout
            android:id="@+id/frist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginTop="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edit_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:textColorHint="#95000000"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="رقم الهاتف  "
                    android:textSize="20dp"

                  android:inputType="number"  />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editnameu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:textColorHint="#95000000"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="الاسم "

                    android:textSize="20dp"

                    />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:textColorHint="#95000000"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="الرقم السري "

                    android:textSize="20dp"

                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editserce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:textColorHint="#95000000"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="الرقم السري مجددا "
                    android:textSize="20dp"

                    />
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/btnsingupu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/frist"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@color/white"
                android:fontFamily="casual"
                android:text="Sign In"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp" />
            <Button
                android:id="@+id/btnsinguLOgin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/frist"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:fontFamily="casual"
                android:text="Login"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>
    </RelativeLayout>
</layout>