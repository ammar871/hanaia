<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="خيارات المنتج "
        android:textStyle="bold"
        android:textSize="30dp"
        android:fontFamily="@font/changa_extralight"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="اكتب ماتريده عن تفاصيل لون ومقاس المنتج  "
        android:textStyle="bold"
        android:textSize="15dp"
        android:fontFamily="@font/changa_extralight"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="من فضلك اكتب لون المنتج"
        android:padding="5dp"
        android:id="@+id/edt_Color"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="من فضلك اكتب مقاس المنتج"
        android:padding="5dp"
        android:id="@+id/edt_size"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"/>


</LinearLayout>